<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="System Qty"
            android:layout_weight="0.75"
            android:gravity="center_vertical"
            android:layout_width="@dimen/dimen0dp"
            android:layout_height="@dimen/dimen45dp"/>

        <TextView
            android:id="@+id/alert_tvSysQty"
            android:layout_weight="1"
            android:layout_width="@dimen/dimen0dp"
            android:layout_height="@dimen/dimen45dp"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Accepted Qty"
            android:layout_weight="0.75"
            android:gravity="center_vertical"
            android:layout_width="@dimen/dimen0dp"
            android:layout_height="@dimen/dimen45dp"/>

        <EditText
            android:id="@+id/alert_etAccQty"
            android:layout_weight="1"
            android:inputType="numberDecimal"
            android:layout_width="@dimen/dimen0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/common_google_signin_btn_text_light_normal_background"/>
    </LinearLayout>
</LinearLayout>